{
  "compilerOptions": {
    "target": "ES2018",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "Bundler",
    "experimentalDecorators": true,
    "esModuleInterop": false,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "webpack-env",
      "jest",
      "@types/node"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "~/*": ["./*"]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}